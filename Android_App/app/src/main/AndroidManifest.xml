<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rbi.onestop"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rbi.onestop.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rbi.onestop.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.rbi.onestop.SignUpActivity"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name="com.rbi.onestop.ForgotPasswordActivity"
            android:label="@string/title_activity_forgot_password" >
        </activity>
        <activity
            android:name="com.rbi.onestop.PostSellActivity"
            android:label="@string/title_activity_post_sell" >
        </activity>
        <activity
            android:name="com.rbi.onestop.PostRentActivity"
            android:label="@string/title_activity_post_rent" >
        </activity>
    </application>

</manifest>
